for_platform :ios do
  app_identifier("software.beda.helloworld.mobile.ios")
  apple_id("INPUT VALUE") # Apple email address of organization

  itc_team_id("INPUT VALUE") # App Store Connect Team ID 
  team_id("INPUT VALUE") # Developer Portal Team ID

  ENV["PILOT_APPLE_ID"] = "INPUT VALUE" # App id for TestFlight (from App information in app connect)

  for_lane :develop do
    ENV["PILOT_APPLE_ID"] = "INPUT VALUE"
    app_identifier("software.beda.helloworld.mobile.ios.develop")
  end

  for_lane :staging do
    ENV["PILOT_APPLE_ID"] = "INPUT VALUE"
    app_identifier("software.beda.helloworld.mobile.ios.staging")
  end
end

for_platform :android do 
  package_name("software.beda.helloworld.mobile.android")

  for_lane :develop do
    ENV["FIREBASEAPPDISTRO_APP"] = "INPUT VALUE" # firebase app id
    package_name("software.beda.helloworld.mobile.android.develop")
  end

  for_lane :staging do
    ENV["FIREBASEAPPDISTRO_APP"] = "INPUT VALUE" # firebase app id
    package_name("software.beda.helloworld.mobile.android.staging")
  end
end
